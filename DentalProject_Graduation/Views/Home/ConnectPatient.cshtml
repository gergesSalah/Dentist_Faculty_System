   @model DentalProject_Graduation.Data.Entities.ConnectedVM
@{
    ViewData["Title"] = "ConnectPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #69a6e3;
    height: 145px"></div>
<div style="background-color: #eee;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;">

    <center style="width:50%;box-shadow:0px 13px 18px 0px rgb(42, 41, 41);margin-top:-80px">

        <div class="modal-content">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form asp-action="ConnectPatient" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title">Connect With Patient and Enter Fields</h5>

                        </div>
                        @if (ViewBag.err != null)
                        {

                            <div class="panel panel-body text-danger">@ViewBag.err</div>
                        }
                        <div class="modal-body">

                            <div class="form-group row">
                                <label for="fname" class="col-sm-2 col-form-label">FirstName:</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="fname" asp-for="fname">
                                </div>
                                <label for="laname" class="col-sm-2 col-form-label">LastName:</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="laname" asp-for="lname" value="@Model.lname">
                                </div>

                                <div class="col-sm-12">
                                    <input hidden class="form-control" asp-for="DentailId" value="@Model.DentailId">
                                </div>

                                <div class="col-sm-12">
                                    <input hidden class="form-control" asp-for="CaseId" value="@Model.CaseId">
                                </div>
                                <label for="Case" class="col-sm-2 col-form-label">Diagnosis</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="Case" asp-for="Disease" value="@Model.Disease">
                                </div>
                                <div class="col-sm-12">
                                    <input hidden class="form-control" asp-for="MailPatient" value="@Model.MailPatient">
                                </div>
                                <br />
                                <div class="col-sm-12"></div>
                                <label for="APPOIN" class="col-sm-2 col-form-label" style="margin-right:25px">Appoinment</label>
                                <div class="col-sm-9">
                                    <input class="form-control" id="APPOIN" asp-for="Appointment" value="@Model.Appointment">
                                </div>
                                <br />
                                <br />
                                <label for="Mes" class="col-sm-2 col-form-label" style="margin-right:25px">Message</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="Message" class="form-control" id="Mes" maxlength="300"></textarea>
                                </div>




                            </div>



                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Connect</button>
                            <a type="button" class="btn btn-secondary" href="/Home/Index">Close</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </center>
</div>

<script>
    document.getElementById("UploadedImage").src = window.URL.createObjectURL(imageUser.files[0])
</script>
