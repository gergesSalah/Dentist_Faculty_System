@model DentalProject_Graduation.Models.ApplicationUser;





@*  Profile Dental Student *@
<section class="container-fluid">

    <div class="row">
        <div class="col-md-3 sidebar_doc">

            <cneter style="margin-top:50px">
                <img src="data:image/*;base64,@Convert.ToBase64String(Model.ImageUser)" class="profile-img-patient" width="80%" height="250" />
                <h4 class="name-patient" id="title_doc">@Model.FirstName @Model.LastName</h4>
            </cneter>
            <hr class="split-patientLine" />

            <p><button class="s_bar_but" id="HomeReload" style="margin-top:20px">Home</button></p>

            <p><a href="/Identity/Account/Manage" class="s_bar_but">Edit Profile</a></p>
            <p><button class="s_bar_but" id="BtnInfectedCases">Infected Cases</button></p>
            <p><button class="s_bar_but" id="BtnTreatedCase">health record</button></p>
            <p><button class="s_bar_but" id="CasesNotContact">Cases</button></p>
            <p><button class="s_bar_but" id="BtnDiagnosis">New Diagnosis</button></p>
           
        </div>

        <!-- Add main content column -->
        <div class="col-md-9 col_card" id=Cases>

            <div class="col-lg-12 mb-4 order-0 land-message">
                <div class="card">
                    <div class="d-flex align-items-end row">
                        <div class="col-sm-7">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Congratulations @Model.FirstName! 🎉</h5>
                                <p class="mb-4">
                                    You are now able to take full advantage of all the services of the site.You are now considered a "patient" user
                                </p>


                            </div>
                        </div>
                        <div class="col-sm-5 text-center text-sm-left">
                            <div class="card-body pb-0 px-0 px-md-4">
                                <img src="~/images/man-with-laptop-light.png"
                                     height="140"
                                     alt="View Badge User"
                                     data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                     data-app-light-img="illustrations/man-with-laptop-light.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

       @*    personal Data *@
            <div class="col-lg-12 mb-4 order-0 land-message">
                <div class="card">
                    <div class="d-flex align-items-end row">
                        <div class="col-sm-7">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Personal Data</h5>
                                <br />
                             <div class="row">
                                    <div class="col-lg-5">
                                        <p class="mb-3">
                                            <span class="identitfier">Name: </span>  @Model.FirstName  @Model.LastName
                                        </p>
                                        <p class="mb-3">
                                            <span class="identitfier">Phone: </span>   @Model.PhoneNumber
                                        </p>
                                        <a href="/Identity/Account/Manage" class="btn  btn-success mb-3">Edit Personal Data</a>

                                    </div>
                                    <div class="col-lg-5">
                                        <p class="mb-3">
                                             @Model.Email
                                        </p>
                                        <p class="mb-3">
                                            <span class="identitfier">Age: </span>  @ViewBag.Patient.Age
                                        </p>

                                    </div>
                             </div>
                           
                            </div>
                        </div>
                        <div class="col-sm-5 text-center text-sm-left">
                            <div class="card-body pb-0 px-0 px-md-4">
                                <img src="~/images/Personal-Data.jpg"
                                     height="140"
                                     alt="View Badge User"
                                     data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                     data-app-light-img="illustrations/man-with-laptop-light.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <img src="~/images/icons8-case-32.Png.png"
