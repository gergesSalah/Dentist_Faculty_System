
@model IEnumerable<DentalProject_Graduation.Data.Entities.InfectedCasesVM>;



<div class="col-sm-12" style=" background-color: #f8f9fa;margin-top:5px;margin-bottom:5px;">

    <div class="col-lg-12 mb-4 order-0 land-message">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">These Are The Cases That You Treated</h5>
                        <p class="mb-4">
                            These are the cases that I treated after uploading the dental image after the treatment
                        </p>



                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/images/Treated_Teeth.png"
                             height="120"
                             alt="View Badge User"
                             data-app-dark-img="illustrations/man-with-laptop-dark.png"
                             data-app-light-img="illustrations/man-with-laptop-light.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>




	@foreach (var item in Model)
		{
			 

    <div class="col-12 treatedCasesPatient">

        <div class="row">

            <div class="col-6">
                <h3 id="title_pat">Before </h3>
                <img src="data:image/*;base64,@Convert.ToBase64String(item.DiseasePicture)" style="width:100% ;height:200px">
                <h3 id="title_pat">After </h3>
                <img src="data:image/*;base64,@Convert.ToBase64String(item.photoAfter)" style="width:100% ;height:200px">
            </div>
            <div class="col-6">

                <div class="Doctor-data">
                    <h2>Doctor's data</h2>
                    <h4 class="mb-4">Name : @item.Firstname @item.Lastname</h4>

                    <h5 class="mb-4">Case : @item.DiseaseName</h5>

                    <h5 class="mb-4">
                        Phone : @item.phone
                    </h5>
                    <h5 class="mb-4">
                        Phone : @item.Age
                    </h5>
                    <h5 class="mb-4
    ">
                        <small class="text-muted">This Cases Is Finished</small>
                    </h5>
                </div>


            </div>

        </div>
    </div>

		}


