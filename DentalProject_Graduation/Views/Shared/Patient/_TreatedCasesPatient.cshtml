@model IEnumerable<DentalProject_Graduation.Data.Entities.InfectedCasePatientVM>




    <div class="col-sm-12" style=" background-color: #f8f9fa;margin-top:5px;margin-bottom:5px; padding:10px">

    <div class="col-lg-12 mb-4 order-0 land-message">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Health Record</h5>
                        <p class="mb-4">
                            The Details Of The Doctor Who Will Treat You And the picture of your teeth after treatment ,This helps your doctor make it easier to diagnose again
                        </p>
                       
      

                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/images/Treated_Teeth.png"
                             height="120"
                             alt="View Badge User"
                             data-app-dark-img="illustrations/man-with-laptop-dark.png"
                             data-app-light-img="illustrations/man-with-laptop-light.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>



	@{
		foreach (var item in Model)
		{


        <div class="col-10 treatedCasesPatient" style="margin:35px">

            <div class="row" style="margin:10px">

                <div class="col-6">
                    <h3 id="title_pat">Before </h3>
                    <img src="data:image/*;base64,@Convert.ToBase64String(item.DiseasePhoto)" style="width:100% ;height:200px">
                    <h3 id="title_pat">After </h3>
                    <img src="data:image/*;base64,@Convert.ToBase64String(item.PhotoAfter)" style="width:100% ;height:200px">
                </div>
                <div class="col-6">

                    <div class="Doctor-data">
                        <h2>Doctor's data</h2>
                        <h4 class="mb-4">Doctor : @item.dentalNameF @item.dentalNameL</h4>

                        <h5 class="mb-4">Case : @item.DiseaseName</h5>

                        <h5 class="mb-4">
                            Phone : @item.Phone
                        </h5>
                        <h5 class="mb-4
    ">
                            <small class="text-muted">This Cases Is Finished</small>
                        </h5>
                    </div>


                </div>

            </div>
        </div>


			



			
		}
	}



