@model IEnumerable<DentalProject_Graduation.Data.Entities.InfectedCasePatientVM>



<div class="col-sm-12" style=" background-color: #f8f9fa;margin-top:5px;margin-bottom:5px;">

    <div class="col-lg-12 mb-4 order-0 land-message">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Affected Cases</h5>
                        <p class="mb-4">
                            Follow your profile to know the date of the next session
                        </p>
                        <p class="mb-4">
                            These medical conditions are under the supervision of a doctor, and after completing treatment, you will find them in your health record

                        </p>

                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/images/Affected_Cases.png"
                             height="120"
                             alt="View Badge User"
                             data-app-dark-img="illustrations/man-with-laptop-dark.png"
                             data-app-light-img="illustrations/man-with-laptop-light.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>





<div style="display:flex;align-content:center;justify-content:center">

@{
    foreach (var item in Model)
    {


        <div class="col_infectedcase">
            <div class="card_infectedcase">
                <img src="data:image/*;base64,@Convert.ToBase64String(item.DiseasePhoto)" style="width:100% ;max-height:200px;min-height:199px">
                <div class="cont_card_infectedcase">
                    <h4 id="title_pat">Doctor Name :  @item.dentalNameF @item.dentalNameL</h4>
                    <p id="title_pat"> Case : @item.DiseaseName</p>
                    <p>Appointment:  @item.Appointment</p>
                    <p> Doctor Phone : @item.Phone</p>
                    <div class="col-sm-12" style="background-color:azure;margin:3px;box-shadow: 5px 5px 5px #888;padding:5px">
                        <center>
                            <h5>This Cases Under Treatement</h5>
                        </center>

                    </div>

                    <br>
                </div>
            </div>
        </div>






    }
}


</div>