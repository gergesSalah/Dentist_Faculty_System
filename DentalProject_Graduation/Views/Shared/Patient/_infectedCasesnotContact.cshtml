@model IEnumerable<DentalProject_Graduation.Data.Entities.CasesNotContactcs>

<div class="col-sm-12" style=" background-color: #f8f9fa;margin-top:5px;margin-bottom:5px;">

    <div class="col-lg-12 mb-4 order-0 land-message">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Affected Cases</h5>

                        <p class="mb-4">
                            Steam will communicate with one of the specialized doctors in treating these cases via e-mail and tell you the date of the session, or you can know that by pressing the “infected cases” button
                        </p>

                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/images/wait.png"
                             height="120"
                             alt="View Badge User"
                             data-app-dark-img="illustrations/man-with-laptop-dark.png"
                             data-app-light-img="illustrations/man-with-laptop-light.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>



<div style="display:flex;align-content:center;justify-content:center" class="row">

    @{
        foreach (var item in Model)
        {


            <div class="col_infectedcase col-4" >
                <div class="card_infectedcase">
                    <img src="data:image/*;base64,@Convert.ToBase64String(item.photo)" style="width:100% ;max-height:200px;min-height:199px">
                    <div class="cont_card_infectedcase">
                        <h4 id="title_pat">Case: @item.DiseaseName</h4>
                       
                        <div class="col-sm-12" style="background-color:azure;margin:3px;box-shadow: 5px 5px 5px #888;padding:5px">
                            <center>
                                <h5>This case is waiting for communication</h5>
                            </center>

                        </div>

                        <br>
                    </div>
                </div>
            </div>






        }
    }
    
</div>

